@model SocialNetwork.ModelDTOs.ViewModelDTOs.HomepageViewDTO

@{
    ViewData["Title"] = "Home Page";
}

@section Styles {
    <link href="~/css/Home/homepage.css" rel="stylesheet" />
}

<div class="left-bar-fixed">
    <div class="left-bar">
        <div class="options-wrapper">
            <div class="options-container">
                <div class="options-image">
                    <img src="~/images/left-bar-fixed/memories.jpg" alt="options-image" class="options-img">
                </div>
                <div class="options-text">
                    Memories
                </div>
            </div>
            <div class="options-container">
                <div class="options-image">
                    <img src="~/images/left-bar-fixed/events.svg"
                         class="options-img" alt="events-icon">
                </div>
                <div class="options-text">
                    Events
                </div>
            </div>
            <div class="options-container">
                <div class="options-image">
                    <img src="~/images/left-bar-fixed/jobs.svg"
                         class="options-img" alt="jobs-icon">
                </div>
                <div class="options-text">
                    Jobs
                </div>
            </div>
            <div class="options-container">
                <div class="options-image">
                    <img src="~/images/left-bar-fixed/favorites.svg"
                         class="options-img" alt="favorites-icon">
                </div>
                <div class="options-text">
                    Favorites
                </div>
            </div>
            <div class="options-container">
                <div class="options-image">
                    <img src="~/images/left-bar-fixed/pages.svg"
                         class="options-img" alt="pages-icon">
                </div>
                <div class="options-text">
                    Pages
                </div>
            </div>
            <div class="options-container">
                <div class="options-image">
                    <img src="~/images/left-bar-fixed/weather.jpg"
                         class="options-img" alt="weather-icon">
                </div>
                <div class="options-text">
                    Weather
                </div>
            </div>
        </div>
    </div>
</div>



<div class="middle-bar">

    <div class="content-box">
        <form asp-controller="Post" asp-action="CreatePost" method="post" enctype="multipart/form-data">
            <div class="demo-class">
                <div class="post-username-image">
                    <div class="profile-image-container post-class">
                        <img class="profile-image"
                             src="data:image/*; base64, @Model.SessionUser.ProfilePhoto" alt="">
                    </div>
                </div>
                <div class="post-something-container">
                    <div class="post-something-box">
                        <input type="text" class="post-input" asp-for="@Model.CreatePost.Content" placeholder="What's on your mind, @Model.SessionUser.FirstName?">
                    </div>
                </div>
            </div>
            <div class="second-demo-class">
                <input type="file" id="add-image-file" asp-for="@Model.CreatePost.Photo">
                <label for="add-image-file"></label>
                <div class="add-image-text">
                    Add Image
                </div>
                <input class="post-button" id="postButton" type="submit" value="Post" />
            </div>
            <div class="error-message">
                @TempData["Error"]
            </div>
        </form>

    </div>

    @foreach (var post in Model.ViewPostList)
    {
        <div class="content-box">
            <div class="post-username-container">
                <div class="post-username-image">
                    <div class="profile-image-container">
                        <img class="profile-image"
                             src="data:image/*; base64, @post.UserProfilePhoto" alt="">
                    </div>
                </div>
                <div class="post-profile-name-container">
                    <a class="links" asp-controller="Home" asp-action="Profile" asp-route-id="@post.UserId">
                        @post.UserFirstName @post.UserLastName
                    </a>
                </div>
                <div class="date-created-container">
                    @post.DateCreated.ToString()
                </div>
            </div>
            <div class="post-text-container">
                @post.TextContent

            </div>
            <div class="post-media-container">
                @if (post.PhotoContent != null)
                {
                    <img class="post-image" src="data:image/*; base64, @post.PhotoContent">

                }
            </div>
            <div class="post-comment-section">
                <div class="section-item-none" id="like-item">
                    <i class="far fa-thumbs-up fa-lg"></i>
                    Like
                </div>
                <div class="comment-section" id="comment-item">
                    <i class="far fa-comment fa-lg"></i>
                    Comment
                </div>
                <div class="section-item-none" id="share-item">
                    <i class="fas fa-share fa-lg"></i>
                    Share
                </div>
            </div>
            <div class="add-comments">
                <div class="post-username-image comment-image">
                    <div class="profile-image-container">
                        <img class="profile-image"
                             src="data:image/*; base64, @Model.SessionUser.ProfilePhoto" alt="">
                    </div>
                </div>
                <div class="comments-box-container">
                    <form class="comments-box">
                        <input type="text" class="comment-input" placeholder="Add Comment..">
                    </form>
                </div>
            </div>
        </div>
    }

</div>

<div class="right-bar">
    <div class="popup-none" id="popup">
        <div class="popup-item">
            Edit Profile
        </div>
        <div class="popup-item">
            Settings
        </div>
        <a class="links" asp-controller="Auth" asp-action="Logout">
            <div class="popup-item">
                Log Out
            </div>
        </a>

    </div>
</div>

